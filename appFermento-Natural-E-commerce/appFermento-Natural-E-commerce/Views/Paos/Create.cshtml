@model appFermento_Natural_E_commerce.Models.Pao

@{
    ViewData["Title"] = "Adicionar Pão";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Adicionar Pão</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label for="tipo">Tipo do Pão:</label>
                    <input asp-for="tipo" class="form-control" />
                    <span asp-validation-for="tipo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="tipoFermentacao">Tipo de Fermentação:</label>
                    <input asp-for="tipoFermentacao" class="form-control" />
                    <span asp-validation-for="tipoFermentacao" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="fornada">Quantidade:</label>
                    <input asp-for="fornada" class="form-control" />
                    <span asp-validation-for="fornada" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="preco">Valor:</label>
                    <input asp-for="preco" class="form-control" />
                    <span asp-validation-for="preco" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Adicionar</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="text-center">
    <a asp-action="Index" class="btn btn-secondary">Voltar para a lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
